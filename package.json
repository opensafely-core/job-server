{
  "name": "job-server",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint": "eslint \"./assets/src/**/*.{js,jsx}\"",
    "lint:fix": "eslint \"./assets/src/**/*.{js,jsx}\" --fix",
    "test": "npx vitest run",
    "test:watch": "npx vitest",
    "test:coverage": "npx vitest run --coverage",
    "test:single": "npx vitest -t"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@vitejs/plugin-legacy": "^2.3.1",
    "@vitest/coverage-c8": "^0.25.2",
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "eslint": "^8.27.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "history": "^5.3.0",
    "jsdom": "^20.0.2",
    "msw": "^0.47.4",
    "postcss-url": "^10.1.3",
    "prettier": "2.7.1",
    "prettier-eslint": "^15.0.1",
    "sass": "^1.56.1",
    "vite": "3.2.3",
    "vite-plugin-static-copy": "^0.12.0",
    "vitest": "^0.25.2",
    "window-resizeto": "^0.0.2"
  },
  "dependencies": {
    "@alpine-collective/toolkit-screen": "^1.0.2",
    "@sentry/react": "^7.19.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.8",
    "@tanstack/react-query": "^4.16.1",
    "@tanstack/react-query-devtools": "^4.18.0",
    "@ttskch/select2-bootstrap4-theme": "^1.5.2",
    "alpinejs": "git://github.com/ebmdatalab/alpine.git#v3.10.3-csp",
    "bootstrap": "^4.6.2",
    "bs-custom-file-input": "^1.3.4",
    "highlight.js": "^11.6.0",
    "htmx.org": "^1.8.4",
    "jquery": "^3.6.1",
    "just-debounce-it": "^3.1.1",
    "list.js": "^2.3.0",
    "pretty-bytes": "^6.0.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-bootstrap": "^2.6.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "react-papaparse": "^4.1.0",
    "react-router-dom": "^6.4.3",
    "react-window": "^1.8.8",
    "select2": "^4.0.13",
    "slugify": "^1.6.5",
    "tablesorter": "^2.31.3",
    "tailwindcss": "^3.2.4",
    "whatwg-fetch": "^3.6.2"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "prettier"
    ],
    "plugins": [
      "prettier",
      "testing-library"
    ],
    "rules": {
      "prettier/prettier": "error",
      "react/jsx-props-no-spreading": "off",
      "react/jsx-sort-props": [
        "error",
        {
          "ignoreCase": true,
          "reservedFirst": true
        }
      ],
      "react/function-component-definition": [
        2,
        {
          "namedComponents": "function-declaration",
          "unnamedComponents": "arrow-function"
        }
      ],
      "import/order": [
        "error",
        {
          "groups": [
            [
              "builtin",
              "external",
              "internal"
            ],
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "never",
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ]
    },
    "env": {
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 2020
    }
  }
}
